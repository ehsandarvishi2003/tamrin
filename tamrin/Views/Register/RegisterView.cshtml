<h1>Register form</h1>

<form asp-action="Registerr" , asp-controller="Register" method="post">

    <div class="form-group mb-3">
        <label class="mb-1" for="emaill">Name:</label>
        <input name="Name" type="text" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label class="mb-1" for="pwd">Email:</label>
        <input name="Email" type="text" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label class="mb-1" for="pwd">Phone Number:</label>
        <input name ="PhoneNumber" type="text" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label class="mb-1" for="pwd">Password:</label>
        <input name="Password" type="text" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label class="mb-1" for="pwd">Repeat password:</label>
        <input name="RepeatPassword" type="text" class="form-control">
    </div>

    <input type="submit" value="Register!" class="btn btn-success" />

</form>